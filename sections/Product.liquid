<script src="{{ 'Product.js' | asset_url }}" defer></script>

<script type="module" defer>
  const root = document.createElement("x-root");

  {% assign product_data_input = product %}
  {% include 'product_data' %}
  root.setProp("productData", product_data_output);

  {% assign product_group_by_color_input = product %}
  {% include 'product_group_by_color' %}
  root.setProp("colors", product_group_by_color_output);
  
  {% render 'template_props_render' %}

  root.render();
</script>

